<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="10" prefHeight="550" prefWidth="950" style="-fx-background-color: darkblue;" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="oop.oop5.AdminDashboard">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Admin Dashboard" textFill="WHITE" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Button fx:id="addRoomButton" onAction="#addRoom" text="Add Room" GridPane.columnSpan="2" GridPane.rowIndex="1" />
    <Button fx:id="viewRoomsButton" onAction="#viewRooms" text="View Rooms" GridPane.columnSpan="2" GridPane.rowIndex="2" />
    <Button fx:id="viewAttendeesButton" onAction="#viewAttendees" text="View Attendees" GridPane.columnSpan="2" GridPane.rowIndex="3" />
    <Button fx:id="viewCategoriesButton" onAction="#viewCategories" text="View Categories" GridPane.columnSpan="2" GridPane.rowIndex="4" />
    <Button fx:id="manageCategoriesButton" onAction="#manageCategories" text="Manage Categories" GridPane.columnSpan="2" GridPane.rowIndex="5" />
    <Button fx:id="logoutButton" onAction="#logout" text="Log Out" GridPane.columnSpan="2" GridPane.rowIndex="6" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
